    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\\n  \\\"title\\\":\\\"Sample task\\\",\\n  \\\"description\\\":\\\"desc\\\"\\n}"
        },
        "url": {
          "raw": "http://{{host}}/tasks"
        }
      }
    }
  ]
}